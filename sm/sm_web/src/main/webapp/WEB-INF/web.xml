<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!--配置编码过滤器-->
  <filter>
    <filter-name>Encoding</filter-name>
    <filter-class>com.yuan.sm.global.EncodingFilter</filter-class>
    <init-param>
      <param-name>ENCODING</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>Encoding</filter-name>
    <!--过滤的路径-->
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>Login</filter-name>
    <filter-class>com.yuan.sm.global.LoginFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Login</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>Login</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  
  <!--配置Servlet-->
  <servlet>
    <servlet-name>Global</servlet-name>
    <servlet-class>com.yuan.sm.global.DispatcherServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Global</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

</web-app>
